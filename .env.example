# ============================================
# SPM v1.0 - Variables de Entorno
# ============================================
# Copia este archivo a .env y configura los valores segun tu entorno
# IMPORTANTE: Nunca commitees el archivo .env con valores reales

# ============================================
# Seguridad
# ============================================
SPM_SECRET_KEY=change-me-in-production-generate-secure-key
AUTH_BYPASS=0

# ============================================
# Entorno
# ============================================
SPM_ENV=development
SPM_DEBUG=1

# ============================================
# Base de Datos
# ============================================
SPM_DB_PATH=src/backend/data/spm.db
SPM_UPLOAD_DIR=src/backend/uploads

# ============================================
# Logs
# ============================================
SPM_LOG_PATH=src/backend/logs/app.log

# ============================================
# JWT
# ============================================
JWT_ALG=HS256
SPM_ACCESS_TTL=3600
SPM_TOKEN_TTL=3600
SPM_COOKIE_NAME=spm_token
SPM_COOKIE_SAMESITE=Lax
SPM_COOKIE_SECURE=0
SPM_COOKIE_DOMAIN=
SPM_REFRESH_GRACE_PERIOD=300

# ============================================
# Frontend
# ============================================
SPM_FRONTEND_ORIGIN=http://localhost:5173
SPM_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ============================================
# Servidor
# ============================================
PORT=5000
HOST=0.0.0.0

# ============================================
# Archivos
# ============================================
SPM_MAX_CONTENT_LENGTH=16777216

# ============================================
# Ollama (IA)
# ============================================
SPM_OLLAMA_URL=http://127.0.0.1:11434
SPM_OLLAMA_MODEL=mistral

# ============================================
# IA (Asistente)
# ============================================
AI_ENABLE=1
AI_EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
AI_PRICE_SMOOTHING=0.5
AI_MAX_SUGGESTIONS=5

# ============================================
# Status Checks
# ============================================
STATUS_TIMEOUT_MS=2000
STATUS_CACHE_SECS=30
STATUS_CHECK_GITHUB=1
STATUS_CHECK_RENDER=1
STATUS_CHECK_OLLAMA=1
